@using MB.Web.Core.HTMLHelpers
@model MB.OMS.Telesale.Domain.Model.UserDTO
@{
    var fullName = Model.FullName == null ? "" : Model.FullName;
}

<section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
        <div class="pull-left image">
            @if (Model.ImageUrl != null)
            {
                <img src="@Model.ImageUrl" class="img-circle" alt="User Image">
            }
            else if (Model.Gender == true)
            {
                <img src="~/Content/AdminLTE/img/avatar2.png" class="img-circle" alt="User Image">
            }
            else if (Model.Gender == false)
            {
                <img src="~/Content/AdminLTE/img/avatar.png" class="img-circle" alt="User Image">
            }
        </div>
        <div class="pull-left info">
            <p>@fullName</p>
            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
        </div>
    </div>
    @Html.Partial("MenuLTE")
</section>