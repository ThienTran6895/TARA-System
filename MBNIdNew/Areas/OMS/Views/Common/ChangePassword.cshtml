@using MB.Web.Core.HTMLHelpers
@using MB.Common.Helpers
@model MB.OMS.Telesale.Domain.Model.ChangePassWord
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@using (Html.MBForm("ChangePassword", "Common", new Dictionary<string, object>() { { "id", "form" }, { "class", "form-horizontal" } }))
{
    @section Breadcrumb {
        <h1>
            Quản lý tài khoản
            <small>Đổi mật khẩu</small>
        </h1>
    }
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Đổi mật khẩu</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-8 center">
                    <div class="form-group">
                        @Html.LabelFor(model => model.OldPassWord, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.PasswordFor(model => model.OldPassWord, new { @class = "form-control", data_placement = "top", data_title = "Mật khẩu cũ", data_toggle = "tooltip", @placeholder = "" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NewPassWord, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.PasswordFor(model => model.NewPassWord, new { @class = "form-control", data_placement = "top", data_title = "Mật khẩu mới", data_toggle = "tooltip", @placeholder = "" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ReplayPassWord, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.PasswordFor(model => model.ReplayPassWord, new { @class = "form-control", data_placement = "top", data_title = "Nhập lại mật khẩu mới", data_toggle = "tooltip", @placeholder = "" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer text-center">
            <div class="col-md-8 center">
                @Html.MBButton("btnSave", "Lưu", null, "btn btn-primary")
            </div>
        </div>
    </div>

}
<script src="~/Areas/OMS/Scripts/user.js"></script>