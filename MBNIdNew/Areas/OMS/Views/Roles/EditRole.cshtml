@using MB.Web.Core.HTMLHelpers
@using MB.Web.Core
@using MB.Common.Helpers
@model MB.OMS.Telesale.Domain.Model.Roles
@{
    ViewBag.Title = "Cập nhật quyền";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@using (Html.MBForm("EditRole", "Roles", new Dictionary<string, object>() { { "id", "form" }, { "class", "form-horizontal" } }))
{
    @Html.HiddenFor(model => model.Id)
    @section Breadcrumb {
        <h1>
            Quản lý quyền
            <small>Cập nhật quyền</small>
        </h1>       
    }
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Cập nhật quyền</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-8 center">
                    <div class="form-group">
                        @Html.LabelFor(model => model.RoleName, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control", data_placement = "top", data_title = "Tên quyền", data_toggle = "tooltip", @placeholder = "" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.IsVisible, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.CheckBoxFor(model => model.IsVisible)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer text-center">
            <div class="col-md-8 center">
                @Html.MBButton("btnSave", "Lưu", null, "btn btn-primary")
                @if (CommonHelper.CheckPermisionExist(Permissions.XoaQuyen.ToString()))
                {
                    @Html.MBButton("btnDelete", "Xóa", null, "btn btn-warning")
                }
                <a href="@Url.Action("ListRole", "Roles")">
                    <input type="button" class="btn btn-danger" value="Hủy" />
                </a>
            </div>
        </div>
    </div>

}
<script src="~/Areas/OMS/Scripts/role.js"></script>