@using MB.Web.Core.HTMLHelpers
@model MB.OMS.Telesale.Domain.Model.Question
@{
    ViewBag.Title = "Thêm mới câu hỏi";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@using (Html.MBForm("AddQuestion", "Question", new Dictionary<string, object>() { { "id", "form" }, { "class", "form-horizontal" } }))
{
    @Html.HiddenFor(model => model.QuestionID)
    @section Breadcrumb {
        <h1>
            Quản lý câu hỏi
            <small>Thêm mới câu hỏi</small>
        </h1>
    }

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Thông tin câu hỏi</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-8 center">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextAreaFor(model => model.Name, new { style = "width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Visiable, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.CheckBoxFor(model => model.Visiable)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer text-center">
            <div class="col-md-8 center">
                @Html.MBButton("btnSave", "Lưu", null, "btn btn-primary")
                <a href="@Url.Action("ListQuestions", "Question")">
                    <input type="button" class="btn btn-danger" value="Hủy" />
                </a>
            </div>
        </div>
    </div>
}
<script src="~/Areas/OMS/Scripts/question.js"></script>
<script>
    $(document).ready(function () {
        $(".numeric").kendoNumericTextBox({
            format: "n0"
        });
        $(@Html.IdFor(model => model.Name)).wysihtml5({
            useLineBreaks: false
        });
    });
</script>