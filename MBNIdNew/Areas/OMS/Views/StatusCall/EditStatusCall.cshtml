@using MB.Web.Core.HTMLHelpers
@using MB.Common.Helpers
@using MB.Web.Core
@model MB.OMS.Telesale.Domain.Model.StatusCallDTO
@{
    ViewBag.Title = "Cập nhật trạng thái cuộc gọi";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@using (Html.MBForm("EditStatusCall", "StatusCall", new Dictionary<string, object>() { { "id", "form" }, { "class", "form-horizontal" } }))
{
    @Html.HiddenFor(model => model.StatusCallID)
    @section Breadcrumb {
        <h1>
            Quản lý trạng thái cuộc gọi
            <small>Cập nhật trạng thái cuộc gọi</small>
        </h1>
    }

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Thông tin trạng thái cuộc gọi</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-8 center">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", data_placement = "top", data_title = "Tên trạng thái", data_toggle = "tooltip", @placeholder = "" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.StatusID, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.DropDownListFor(model => model.StatusID, Model.AvailableStatus, new { @class = "form-control", @style = "width:100%;" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Visiable, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            @Html.CheckBoxFor(model => model.Visiable)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer text-center">
            <div class="col-md-8 center">
                @Html.MBButton("btnSave", "Lưu", null, "btn btn-primary")
                @if (CommonHelper.CheckPermisionExist(Permissions.XoaTrangThaiCuocGoi.ToString()))
                {
                    @Html.MBButton("btnDelete", "Xóa", null, "btn btn-warning")
                }                
                <a href="@Url.Action("ListStatusCall", "StatusCall")">
                    <input type="button" class="btn btn-danger" value="Hủy" />
                </a>
            </div>
        </div>
    </div>

}
<script src="~/Areas/OMS/Scripts/statuscall.js"></script>
<script>
    $(document).ready(function () {
        $("#@Html.IdFor(model => model.StatusID)").select2();
    });
</script>